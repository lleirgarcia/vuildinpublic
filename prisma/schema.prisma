// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  email       String?  @unique
  emailVerified DateTime?
  username    String?  @unique
  name        String?
  avatar      String?
  bio         String?
  tiktokHandle String? // Handle de TikTok asociado
  youtubeHandle String? // Handle de YouTube asociado
  instagramHandle String? // Handle de Instagram asociado
  
  // Relaciones NextAuth
  accounts    Account[]
  sessions    Session[]
  
  // Relaciones
  comments    Comment[]
  messages    Message[]
  votes       Vote[]
}

model Comment {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  tiktokHandle    String
  commentText     String
  videoUrl        String?
  isCandidateToday Boolean @default(false)
  spec            String?  // JSON string del mini spec generado
  userId          String?  // Usuario asociado (opcional)
  
  // Relaciones
  user            User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  project         Project?
  poll            Poll?
}

model Estado {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  name        String   @unique // brainstorming, in progress, testing, shipped
  label       String   // Etiqueta para mostrar (Brainstorming, In Progress, etc.)
  color       String   // Color en formato hex para el texto
  bgColor     String   // Color de fondo en formato hex
  borderColor String   // Color del borde en formato hex
  projects    Project[]
}

model Project {
  id          String   @id @default(cuid())
  number      Int      @unique
  createdAt   DateTime @default(now())
  estadoId    String
  estado      Estado   @relation(fields: [estadoId], references: [id], onDelete: Restrict)
  title       String
  commentId  String    @unique
  comment     Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  changelog   String?
  spec        String   // JSON string del spec congelado
  messages    Message[] // Mensajes/comentarios sobre este proyecto
  videos      Video[]  // Videos relacionados con el proyecto
}

model Message {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  projectId  String
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tiktokHandle String
  messageText String
  likes       Int      @default(0) // Para tracking de interacciones
  userId      String?  // Usuario asociado (opcional)
  
  // Relaciones
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model Poll {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  title       String
  description String?
  commentId   String   @unique
  comment     Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  votes       Vote[]
  isActive    Boolean  @default(true)
}

model Vote {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  pollId      String
  poll        Poll     @relation(fields: [pollId], references: [id], onDelete: Cascade)
  tiktokHandle String
  userId      String?  // Usuario asociado (opcional)
  
  // Relaciones
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model Video {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  projectId  String
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  title       String
  url         String
  description String?
}

model SocialStat {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  totalFollowers Int     @default(0)
  monthlyGrowth  Float   @default(0) // Porcentaje de crecimiento mensual
  weeklyGrowth   Float   @default(0) // Porcentaje de crecimiento semanal
  startDate      DateTime // Fecha de inicio para calcular d√≠as transcurridos
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

